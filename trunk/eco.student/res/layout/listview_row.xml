<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >
 
    <!-- Course Name -->
    <TextView
        android:id="@+id/txtCourseName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Arquitectura de computadores y ensambladores 1"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"/>
 
    <!-- Professor Name -->
    <TextView
        android:id="@+id/txtProfessorName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCourseName"
        android:textColor="#343434"
        android:textSize="12sp"
        android:layout_marginTop="1dip"
        android:text="Ing. Rene Ornelyz" />
 
    <!-- Schedule -->
    <TextView
        android:id="@+id/txtDayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtCourseName"
        android:gravity="center"
        android:text="Miercoles"
        android:textSize="12sp"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>
    
 	<TextView
        android:id="@+id/txtHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDayName"
        android:layout_toRightOf="@id/txtCourseName"
        android:gravity="center"
        android:text="7:00"
        android:textSize="12sp"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>
     <!-- Schedule -->

     <ImageView
         android:id="@+id/imgStatus"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:src="@drawable/offline" />
 
</RelativeLayout>